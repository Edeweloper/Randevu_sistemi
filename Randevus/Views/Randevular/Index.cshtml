@using Entity.Concrete
@model List<Randevular>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<link rel="stylesheet" href="~/mazer/assets/extensions/simple-datatables/style.css">
<link rel="stylesheet" href="~/mazer/assets/css/pages/simple-datatables.css">
<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Randevular</h3>
            
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">DataTable</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<section class="section">
    <div class="card">
        <div class="card-header">
            Simple Datatable
        </div>
        <div class="card-body">
            <table class="table table-striped" id="table1">
                <thead>
                    <tr>
                       <th>Randevu Durumu</th>
                        <th>İsim</th>
                        <th>Konu</th>
                        <th>Telefon</th>
                        <th>Ziyaret Edilen</th>
                        <th>Başlangıç-Bitiş</th>
                      
                        <th>Oluşturan</th>
                        
                         
                    </tr>
                </thead>
                <tbody>
                  
                    @foreach (var item in Model)
                    {
                        
                    
                    <tr>
                        
                           <td>
                                
                                @if (item.Randevu_Durumu.Randevu_Durumu == "İptal Edildi"){ <span class="badge bg-danger">@item.Randevu_Durumu.Randevu_Durumu</span> }
                                else if (item.Randevu_Durumu.Randevu_Durumu =="Ertelendi") { <span class="badge bg-warning">@item.Randevu_Durumu.Randevu_Durumu</span> }
                                else if (item.Randevu_Durumu.Randevu_Durumu =="Tamamlandı") { <span class="badge bg-success">@item.Randevu_Durumu.Randevu_Durumu</span>}
                                else{ <span class="badge bg-secondary">@item.Randevu_Durumu.Randevu_Durumu</span>}
                            </td>
                       
                                                
                                                
                        <td>@item.Randevuya_Gelen</td>
                        <td>@item.Konu</td>
                        <td>@item.Telefon</td>
                        <td>@item.Ziyaret_EdilenKisi.Name</td>
                        <td>@item.Start_Time      @item.End_Time</td>
                     
                        <td>@item.Randevu_Kaydeden.Name</td>
                        <td>
                            <a  href="~/Randevular/DeleteRandevu/@item.Randevu_id" method="post"><span class="badge bg-danger">Sil</span></a>
                        </td>
                        <td>
                            <a href="~/Randevular/UpdateRandevu/@item.Randevu_id"><span class="badge bg-info">Güncelle</span></a>
                        </td>
                    </tr>
                    
                    }
                </tbody>
            </table>
        </div>
    </div>

</section>


    <script src="~/mazer/assets/extensions/simple-datatables/umd/simple-datatables.js"></script>
    <script src="~/mazer/assets/js/pages/simple-datatables.js"></script>
