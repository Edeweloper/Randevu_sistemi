@model Randevus.Models.UserRegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign up - Voler Admin Dashboard</title>
    <link rel="stylesheet" href="~/voler/assets/css/bootstrap.css">

    <link rel="shortcut icon" href="~/image/Dsi.png" type="image/x-icon">
    <link rel="stylesheet" href="~/voler/assets/css/app.css">
</head>

<body>
    <div id="auth">

        <div class="container">
            <div class="row">
                <div class="col-md-7 col-sm-12 mx-auto">
                    <div class="card pt-4">
                        <div class="card-body">
                            <div class="text-center mb-5">
                                <img src="~/image/Dsi.png" height="80" class='mb-4'>
                                <h3>Üye Ol</h3>
                                <p>Kayıt olmak için lütfen formu eksiksiz doldurun.</p>
                            </div>
                            <form method="post">
                                <div class="row">
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="first-name-column">İSMİNİZ</label>
                                            <input type="text" id="first-name-column" class="form-control" name="Name">
                                            <span asp-validation-for="Name"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="last-name-column">Soy İSMİNİZ</label>
                                            <input type="text" id="last-name-column" class="form-control" name="SurName">
                                            <span asp-validation-for="SurName"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="username-column">KULLANICI ADINIZ</label>
                                            <input type="text" id="username-column" class="form-control" name="UserName">
                                            <span asp-validation-for="UserName"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="email-id-column">MAİL ADRESİNİZ</label>
                                            <input type="email" id="email-id-column" class="form-control" name="Email">
                                            <span asp-validation-for="Email"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="company-column">ŞİFRE</label>
                                            <input type="text" id="password-column" class="form-control" name="Password">
                                            <span asp-validation-for="Password"></span>
                                        </div>
                                    </div><div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="company-column">ŞİFRE TEKRARI</label>
                                            <input type="text" id="password-again-column" class="form-control" name="ConfirmPassword">
                                        </div>
                                    </div>

                                </div>
                                <div class='form-check clearfix my-4'>
                                    <div class="checkbox float-start">
                                        <input type="checkbox" id="Is_Admin" name="Is_Admin" value="true" class='form-check-input'>
                                        <label for="Is_Admin">Admin</label>
                                    </div>
                                    <div class="float-end">
                                        <a href="Register">Hesabınız var mı? Oturum Açın</a>
                                    </div>
                                </div>

                                <div class="clearfix">
                                    <button class="btn btn-primary float-end">Oluştur</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <partial name="~/Views/Partials/Partial_Footer.cshtml" />
    <script src="~/voler/assets/js/feather-icons/feather.min.js"></script>
    <script src="~/voler/assets/js/app.js"></script>

    <script src="~/voler/assets/js/main.js"></script>
</body>

</html>
