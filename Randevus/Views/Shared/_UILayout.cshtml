<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dsi Randevu</title>
    
    <link rel="stylesheet" href="~/mazer/assets/css/main/app.css">
    <link rel="stylesheet" href="~/mazer/assets/css/main/app-dark.css">
    <script src="~/mazer/assets/js/mazer.js"></script>
    
</head>

<body>
    <div id="app">
        <!-- BEGIN: Side Menu-->
        <partial name="~/Views/Partials/Partial_SideMenu.cshtml" />
        <!-- END: Side Menu-->
        <div id="main" class='layout-navbar'>
            <header class='mb-3'>
                <nav class="navbar navbar-expand navbar-light navbar-top">
                    <div class="container-fluid">
                        <a href="#" class="burger-btn d-block">
                            <i class="bi bi-justify fs-3"></i>
                        </a>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ms-auto mb-lg-0">
                               
                            </ul>
                            <div class="dropdown">
                                <a href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-menu d-flex">
                                        <div class="user-name text-end me-3">
                                            <h6 class="mb-0 text-gray-600">@User.Identity.Name</h6>
                                           
                                            <p class="mb-0 text-sm text-gray-600">Yönetici</p>
                                        </div>
                                        <div class="user-img d-flex align-items-center">
                                            <div class="avatar avatar-md">
                                                <img src="~/mazer/assets/images/samples/origami.jpg">
                                            </div>
                                        </div>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton" style="min-width: 11rem;">
                                    <li>
                                        <h6 class="dropdown-header">@User.Identity.Name</h6>
                                    </li>
                                 
                                    <li><a class="dropdown-item" href="~/Settings/Index"><i class="icon-mid bi bi-gear me-2"></i>
                                            Ayarlar</a></li>
                                    
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item" href="~/Login/LogOut"><i
                                                class="icon-mid bi bi-box-arrow-left me-2"></i> Çıkış</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>
            </header>
            <div id="main-content">
                
<div class="page-heading">
    @RenderBody()
</div>

                <!-- BEGIN: Footer-->
    <partial name="~/Views/Partials/Partial_Footer.cshtml" />
    <!-- END: Footer-->
            </div>
        </div>
    </div>
    <script src="~/mazer/assets/js/bootstrap.js"></script>
    <script src="~/mazer/assets/js/app.js"></script>

</body>

</html>
